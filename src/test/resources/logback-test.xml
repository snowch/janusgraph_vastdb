<configuration>
    <appender n="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Keep logging minimal for tests -->
    <logger n="org.janusgraph.diskstorage.vastdb" level="WARN"/>
    <logger n="com.vastdata.vdb.sdk" level="WARN"/>
    <logger n="org.janusgraph" level="WARN"/>

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>